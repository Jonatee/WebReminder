@{
    ViewData["Title"] = "Remindify - Never Forget What Matters";
    ViewData["PageClass"] = "landing-page";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="content-container">
        <div class="hero-container">
            <div class="hero-content">
                <h2>Never Forget What Matters</h2>
                <p>
                    Stay organized and on top of your tasks with Remindify. The smart reminder app that helps you manage your
                    time effectively.
                </p>
                <div class="cta-buttons">
                    <a href="@Url.Action("Register", "Auth")" class="btn-primary">
                        Get Started <i class="icon-arrow-right"></i>
                    </a>
                </div>

                <div class="features-preview">
                    <div class="feature-item">
                        <i class="icon-check-circle"></i>
                        <span>Free</span>
                    </div>
                    <div class="feature-item">
                        <i class="icon-check-circle"></i>
                        <span>No credit card required</span>
                    </div>
                    <div class="feature-item">
                        <i class="icon-check-circle"></i>
                        <span>Use anytime</span>
                    </div>
                </div>
            </div>

            <div class="hero-image">
                <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Reminder%20Icon.jpg-GhIfwBgt8xqjOInGS6nWdH9jN4krop.jpeg" alt="Reminder App Icon" />
                <div class="hero-image-mask"></div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section id="features" class="features-section">
    <div class="content-container">
        <h2>Why Choose Remindify? 😍</h2>

        <div class="features-grid">
            <div class="feature-card purple">
                <div class="icon-circle">
                    <i class="icon-bell"></i>
                </div>
                <h3>Smart Notifications 🔔</h3>
                <p>
                    Get timely reminders exactly when you need them, with intelligent notification scheduling.
                </p>
            </div>

            <div class="feature-card blue">
                <div class="icon-circle">
                    <i class="icon-calendar"></i>
                </div>
                <h3>Calendar Integration 📅</h3>
                <p>
                    Sync with your favorite calendar apps to keep all your schedules in one place.
                </p>
            </div>

            <div class="feature-card green">
                <div class="icon-circle">
                    <i class="icon-clock"></i>
                </div>
                <h3>Time Management ⏰</h3>
                <p>
                    Track your productivity and optimize your daily schedule with our analytics tools.
                </p>
            </div>
        </div>

        <div class="cta-center">
            <a href="@Url.Action("Register", "Auth")" class="btn-primary">Start Your Reminder Journey</a>
        </div>
    </div>
</section>